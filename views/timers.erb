<!-- views/timers.erb -->
<!DOCTYPE html>
<html>
<head>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <title>Timer History</title>
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css">
  <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>

  <style>
      body {
          font-family: Arial, sans-serif;
          margin: 0 auto;
          padding: 0 1rem;
      }
      .nav {
          background: #333;
          padding: 1rem 0;
          margin-bottom: 2rem;
          width: 100%;
          position: sticky;
          top: 0;
      }
      .nav a {
          color: white;
          text-decoration: none;
          margin-right: 2rem;
          padding: 0.5rem 1rem;
      }
      .nav a:hover {
          background: #444;
          border-radius: 4px;
      }
      table {
          width: 100%;
          border-collapse: collapse;
      }
      th, td {
          padding: 8px;
          text-align: left;
          border-bottom: 1px solid #ddd;
      }
      th {
          background-color: #f5f5f5;
      }
      .duration {
          font-family: monospace;
      }
  </style>
</head>
<body>
<div class="nav">
  <a href="/">Home</a>
  <a href="/view">View Records</a>
  <a href="/instructions">Setup</a>
</div>

<h1>Timer History</h1>
<form method="post" action="/clear" style="margin-bottom: 20px">
  <button type="submit" class="dt-button" onclick="return confirm('Are you sure you want to clear all timer records?')">Clear All Records</button>
</form>

<table id="timerTable">
  <thead>
  <tr>
    <th>ID</th>
    <th>Topic</th>
    <th>Duration</th>
    <th>Created At</th>
  </tr>
  </thead>
  <tbody>
  <% timers.each do |timer| %>
    <tr>
      <td><%= timer[:id] %></td>
      <td><%= timer[:topic] %></td>
      <td class="duration"><%= format_duration(timer[:time]) %></td>
      <td><%= timer[:created_at] %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function() {
        $('#timerTable').DataTable({
            order: [[3, 'desc']], // Sort by created_at by default
            pageLength: 25,
            dom: 'Bfrtip',
            buttons: ['copy', 'csv', 'excel'],
            columns: [
                { width: '10%' },
                { width: '40%' },
                { width: '20%' },
                { width: '30%' }
            ]
        });
    });
</script>
</body>
</html>